class PatternDiagonal
{
	public static void main(String[] args)
	{
		for (int i = 0;i<=2+1 ;i++ )
		{
			for (int j=0;j<=i ;j++ )
			{
				System.out.print("* ");
			}
			System.out.println();
		}
		for (int a=2;a>=0 ;a-- )
		{
			for (int j=0;j<=a ;j++ )
			{
				System.out.print("* ");
			}
			System.out.println();
		}
	}
}
